<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:text="MORE DETAILS"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/detailsBtn" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="VIEW MAP"
                android:id="@+id/mapBtn"
                android:layout_alignTop="@+id/detailsBtn"
                android:layout_toRightOf="@+id/detailsBtn"
                android:layout_toEndOf="@+id/detailsBtn" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/fbBtn"
                android:src="@drawable/fb"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignBottom="@+id/mapBtn"
                android:layout_toRightOf="@+id/mapBtn"
                android:layout_toEndOf="@+id/mapBtn" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="34dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/detailsBtn"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear in Los Angeles, CA"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="22dp"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="30dp"
                android:text="68"
                android:id="@+id/centerTemp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView8"
                android:layout_alignTop="@+id/centerTemp"
                android:layout_toRightOf="@+id/centerTemp"
                android:layout_toEndOf="@+id/centerTemp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L:"
                android:id="@+id/textView9"
                android:layout_below="@+id/centerTemp"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageView"
                android:layout_marginTop="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"
                android:id="@+id/minTemptextView"
                android:layout_alignTop="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:layout_toEndOf="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="| "
                android:id="@+id/textView10"
                android:layout_alignBaseline="@+id/minTemptextView"
                android:layout_alignBottom="@+id/minTemptextView"
                android:layout_toRightOf="@+id/minTemptextView"
                android:layout_toEndOf="@+id/minTemptextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:"
                android:id="@+id/textView11"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_alignBottom="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:id="@+id/maxTemptextView"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_toRightOf="@+id/textView11"
                android:layout_toEndOf="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView12"
                android:layout_alignTop="@+id/maxTemptextView"
                android:layout_toRightOf="@+id/maxTemptextView"
                android:layout_toEndOf="@+id/maxTemptextView" />

            <TableLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:stretchColumns="0"
                android:layout_below="@+id/textView9">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="Precipitation"
                        android:id="@+id/textView15"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/precipiTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Chance of Rain"
                        android:id="@+id/textView17"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:id="@+id/chanceOfTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Wind Speed"
                        android:id="@+id/textView19"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/windSpeedTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Dew Point"
                        android:id="@+id/textView21"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/dewPoTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Humidity"
                        android:id="@+id/textView23"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/humiTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Visibility"
                        android:id="@+id/textView25"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/visiTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Sunrise"
                        android:id="@+id/textView27"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/riseTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Sunset"
                        android:id="@+id/textView29"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:id="@+id/setTextView"
                        android:layout_column="1"
                        android:layout_gravity="right"/>
                </TableRow>




            </TableLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>